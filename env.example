# Shopify Tracking App - Environment Variables

# Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# Shopify Configuration
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_api_secret_here
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

# OAuth Configuration
OAUTH_REDIRECT_URI=https://web-production-8c47.up.railway.app/auth/callback

# Database Configuration
DATABASE_URL=your_database_url_here
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Redis Configuration (Upstash Redis)
REDIS_URL=your_upstash_redis_url_here
REDIS_TOKEN=your_upstash_redis_token_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,https://your-shop.myshopify.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Tracking Configuration
ENABLE_PAGE_TRACKING=true
ENABLE_ECOMMERCE_TRACKING=true
ENABLE_PERFORMANCE_TRACKING=true
ENABLE_USER_BEHAVIOR_TRACKING=true
ENABLE_GEO_TRACKING=true
CONSENT_REQUIRED=false
DATA_RETENTION_DAYS=365
